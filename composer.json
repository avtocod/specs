{
    "name": "avtocod/specs",
    "description": "Specifications repository",
    "keywords": [
        "specs",
        "specifications",
        "avtocod"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Avtocod",
            "homepage": "https://github.com/avtocod"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "avtocod/specs-php": "dev-fix-tests-and-other-stuff"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5",
        "phpstan/phpstan": "~0.12"
    },
    "autoload": {
        "psr-4": {
            "Avtocod\\Specifications\\Legacy\\": "sdk/php/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Avtocod\\Specifications\\Legacy\\Tests\\": "sdk/php/tests/"
        }
    },
    "scripts": {
        "phpunit": "@php ./vendor/bin/phpunit --configuration ./sdk/php/phpunit.xml.dist --no-coverage --colors=always",
        "phpunit-cover": "@php ./vendor/bin/phpunit --configuration ./sdk/php/phpunit.xml.dist",
        "phpstan": "@php ./vendor/bin/phpstan analyze --no-progress --ansi --level=max ./sdk/php/src",
        "test": [
            "@phpstan",
            "@phpunit"
        ],
        "test-cover": [
            "@phpstan",
            "@phpunit-cover"
        ]
    },
    "prefer-stable": true,
    "repositories":[
        {
            "type": "vcs",
            "url": "git@github.com:Reallife/specs-php.git"
        }
    ],
    "support": {
        "issues": "https://github.com/avtocod/specs/issues",
        "source": "https://github.com/avtocod/specs"
    }
}
